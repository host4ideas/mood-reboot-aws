@model Course

@{
    Layout = "_MenuLayout";
}

@{
    string userId = Context.User.FindFirstValue(ClaimTypes.NameIdentifier);

    <p class="my-4 text-4xl text-gray-900 dark:text-white">Matricularme al curso: <span class="text-4xl font-bold text-gray-900 dark:text-white">@Model.Name</span></p>

    <form class="my-4" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="courseId" value="@Model.Id" />
        <input type="hidden" name="userId" value="@userId" />
        @{
            if (Model.Password != null)
            {
                <input name="password" type="text" id="large-input" class="block w-full my-6 p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Contraseña del curso">
            }

            if (ViewData["ERROR"] != null)
            {
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <span class="font-medium">¡Error!</span> @ViewData["ERROR"]
                </div>
            }
        }

        <button type="submit" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center my-6">Unirme al curso</button>
    </form>
}
