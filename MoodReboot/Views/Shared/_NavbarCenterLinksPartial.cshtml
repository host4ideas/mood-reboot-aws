@{
    string GetActiveLinkClass(string route)
    {
        string currentAction = ViewContext.RouteData.Values["action"]!.ToString()!;
        string currentController = ViewContext.RouteData.Values["controller"]!.ToString()!;
        string active = "block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white";
        string notActive = "block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700";

        if (currentAction.Contains(route) || currentController.Contains(route))
        {
            return active;
        }
        return notActive;
    }
}

<div class="items-center justify-between hidden w-full md:flex md:w-auto" id="mobile-menu-2">
    <ul class="flex flex-col p-2 mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium border-2 border-gray-500 md:border-0 rounded">
        <li class="flex items-center">
            <a asp-controller="Home" asp-action="Index" class="@GetActiveLinkClass("Home")">Home</a>
        </li>
        <li class="flex items-center">
            <a asp-controller="Centers" asp-action="Index" class="@GetActiveLinkClass("Centers")">Centros</a>
        </li>

        @{
            if (Context.User.Identity.IsAuthenticated == false)
            {
                <!-- Hide if the user is logged in -->
                <li class="flex items-center">
                    <a asp-controller="Users" asp-action="Profile" class="block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Login</a>
                </li>
            }
            else
            {
                <li class="flex items-center">
                    <a asp-controller="Centers" asp-action="UserCenters" class="@GetActiveLinkClass("UserCenters")">Mis centros</a>
                </li>
                <li class="flex items-center">
                    <a asp-controller="Courses" asp-action="UserCourses" class="@GetActiveLinkClass("UserCourses")">Mis cursos</a>
                </li>
            }
        }

        <li class="flex items-center">
            <!-- Dark / Light mode -->
            <button id="theme-toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
                <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
                <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
            </button>
        </li>
    </ul>
</div>
